- content_for :page_title do
  - if @stream.tag_name
    = @stream.display_tag_name
  - else
    = t('.whatup', :pod => @pod_url)

- content_for :head do
  = include_javascripts :home
  :javascript
    $(document).ready(function(){
      // Change the text and color of the "follow this tag" button on hover.
      $(".button.tag_following").hover(function(){
        $this = $(this);
        $this.removeClass("in_aspects");
        $this.val("#{t('.stop_following', :tag => @stream.tag_name)}");
      },
      function(){
        $this = $(this);
        $this.addClass("in_aspects");
        $this.val("#{t('.following', :tag => @stream.tag_name)}");
      });
    });
    $(".people_stream .pagination a").live("click", function() {
      $.getScript(this.href);
      return false;
    });


- content_for :body_class do

  %h3
    = @destination.title
  = "tags_show"

.span-6.tags_people
  %h3
    = t('people', :count => @stream.tagged_people_count)

  .side_stream.stream
    = render :partial => 'people/index', :locals => {:people => @stream.tagged_people}

  %br

  .section
    = render "tags/followed_tags_listings"

  %br

  .section
    .profile_photo
      = image_tag @destination.photo_url

  = link_to t('.edit'), edit_destination_path(@destination) if current_user and current_user.admin?
  %br
  %br

  .section
    %h3
      = t('.articles')
    %ul 
      = render :partial => 'destinations/article', :collection => @stream.related_articles

  .section
    %h3
      = t('.places')
    %ul#places_list.left_nav
      - @stream.related_places.each do |k,v|
        %br
        %a.home_selector= k.capitalize + " (#{v.count})"
        %li
          - v.each do |place|
            = link_to place.description.title, place_path(place)
            %br

  %br
  .section
    %h3
      = t('.destinations')
    %ul#destinations_list.left_nav
      - @stream.related_destinations.each do |destination|
        = link_to destination.title, destination_path(destination)

  %br
  .section
    %h3
      = link_to t('.photos'), destination_photos_path(@destination)

  %br

  .section
    = render :partial => 'shared/social_networking'

.span-15.last
  .stream_container
    #author_info
      - if user_signed_in?
        .right
          - unless tag_followed?
            = button_to t('.follow', :tag => @stream.title), tag_tag_followings_path(:name => @stream.title), :method => :post,   :class => 'button take_action'
          - else
            = button_to t('.following', :tag => @stream.title), tag_tag_followings_path(:name => @stream.title), :method => :delete,   :class => 'button red_on_hover tag_following in_aspects take_action'
      %h2
        = @stream.title
        %small
          = t('.followed_by')
          = t('people', :count => @stream.tag_follow_count)

    - if current_user
      = render 'shared/publisher', :selected_aspects => @stream.aspect_ids, :aspect_ids => @stream.aspect_ids, :for_all_aspects => true, :aspect => @stream.aspect

    %hr

    #main_stream.stream


