- content_for :head do
  = include_javascripts :people

- content_for :page_title do
  = @person.name

.span-6
  #profile
    .profile_photo
      = image_tag "/images/user/default.png", :class => "avatar"

.span-18.last
  #author_info
    %h2
      = @person.user.username
    .right
      = aspect_membership_dropdown(@contact, @person, 'right')
    %hr

  %div{:style=>"text-align:center;", :class => "dull"}
    =  t('.private_profile')

