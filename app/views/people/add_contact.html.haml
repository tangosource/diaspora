- content_for :head do
  = include_javascripts :people

- content_for :page_title do
  = @person.name

.span-6
  #profile
    .profile_photo
      = image_tag "/images/user/default.png", :class => "avatar"

.span-18.last
  .stream_container
    #author_info
      .below
        = aspect_membership_dropdown(@contact, @person, 'right')
      %h2
        = @person.user.username

    %div{:style=>"text-align:center;", :class => "dull"}
      = t('.private_profile')
      = link_to t('.send_message'), new_conversation_path(:to => @person.id), :rel => 'facebox'

    %hr
