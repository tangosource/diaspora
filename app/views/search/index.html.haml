- content_for :page_title do
  = t('search.title')

.span-24.last
  - if params[:q].blank?
    %h2
      =t('.no_results')
  - else
    %h2#search_title
      =t('.results_for')
      %span.term
        = params[:q]
    %h4
      %small
        = t('.looking_for', :tag_link => tag_page_link(params[:q])).html_safe
.span-15
  %hr
.clearfix

- if @people.blank? && @places.blank? && @destinations.blank?
  .span-15.append-1
    %h2= t('.nothing_found')
- unless @people.blank?
  .span-15.append-1
    %h4 People
  .span-15.append-1
    #people_stream.stream
      - @people.each do|person|
        = render 'search/person', :person => person
      = will_paginate @people

- unless @destinations.blank?
  .span-15.append-1.search-content-block
    %h4 Destinations
  .span-15.append-1
    #people_stream.stream
      - @destinations.each do|destination|
        = render 'search/destination', :destination => destination
      = will_paginate @destinations

- unless @places.blank?
  .span-15.append-1.search-content-block
    %h4 Places
  .span-15.append-1
    #people_stream.stream
      - @places.each do |place|
        = render 'search/place', :place => place
      = will_paginate @places
    
.span-8.last
  %h4
    = t('.couldnt_find_them_send_invite')
  = render "shared/invitations"


     
